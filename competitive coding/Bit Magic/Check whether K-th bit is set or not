//User function Template for C++

// Function to check if Kth bit is set or not
bool checkKthBit(int n, int k){
    if(n>0)
    {
    if(((n>>k)&1)==1)
    {
        return 1;
    }
    else
    {
        return 0;
    }
    }
    
    // Your code here
    // It can be a one liner logic!! Think of it!!
    
}

// { Driver Code Starts.

// Driver Code
int main()
{
	int t;
	cin>>t;
	while(t--)
	{
	    long long n;
	    cin>>n;
	    int k;
	    cin>>k;
	    
	    if(checkKthBit(n, k))
	        cout << "Yes" << endl;
	    else
	        cout << "No" << endl;
	}
	return 0;
}  // } Driver Code Ends
