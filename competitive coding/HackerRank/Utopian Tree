#include <bits/stdc++.h>

using namespace std;

// Complete the utopianTree function below.
int utopianTree(int n) {
    int i=0,res=1;
    for(i=1;i<=n;i++)
    {
        if(i%2==0)
        {
            res=res+1;
        }
        else
        {
            res=res*2;
        }
    }
    return res;

}
